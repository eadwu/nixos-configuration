Dump temacs in an empty environment to prevent -dev paths from ending
up in the dumped image.

diff --git a/src/Makefile.in b/src/Makefile.in
index 2348c8dae4..a8424ee6dc 100644
--- a/src/Makefile.in
+++ b/src/Makefile.in
@@ -561,7 +561,8 @@ emacs$(EXEEXT): temacs$(EXEEXT) \
                 lisp.mk $(etc)/DOC $(lisp) \
                 $(lispsource)/international/charprop.el ${charsets}
 ifeq ($(DUMPING),unexec)
-	LC_ALL=C $(RUN_TEMACS) -batch $(BUILD_DETAILS) -l loadup --temacs=dump
+	unset EMACS_HEAP_EXEC; \
+	env -i LC_ALL=C $(RUN_TEMACS) -batch $(BUILD_DETAILS) -l loadup --temacs=dump
   ifneq ($(PAXCTL_dumped),)
 	      $(PAXCTL_dumped) emacs$(EXEEXT)
   endif
@@ -572,7 +573,8 @@ endif
 
 ifeq ($(DUMPING),pdumper)
 $(pdmp): emacs$(EXEEXT)
-	LC_ALL=C $(RUN_TEMACS) -batch $(BUILD_DETAILS) -l loadup --temacs=pdump
+	unset EMACS_HEAP_EXEC; \
+	env -i LC_ALL=C $(RUN_TEMACS) -batch $(BUILD_DETAILS) -l loadup --temacs=pdump
 	cp -f $@ $(bootstrap_pdmp)
 endif
 
